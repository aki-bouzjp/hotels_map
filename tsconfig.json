{
  "compilerOptions": {
    "types": ["react"],
    "baseUrl": ".",
    "outDir": "build",
    "rootDir": "/",
    "module": "ESNext",
    "target": "es5",
    "lib": ["es2019", "dom"],
    "strict": true,
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "typeRoots": ["src/@types", "node_modules/@types"],
    "paths": {
      "@types/*"   : ["src/@types/*"],
      "apis/*"     : ["src/apis/*"],
      "app/*"      : ["src/app/*"],
      "atoms/*"    : ["src/atoms/*"],
      "molecules/*": ["src/molecules/*"],
      "organisms/*": ["src/organisms/*"],
      "modules/*"  : ["src/modules/*"],
      "utils/*"    : ["src/utils/*"]
    },
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true
  },
  "include": [
    "/**/*.ts",
    "/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "build",
    "e2e",
    "scripts",
    "webpack"
  ]
}
